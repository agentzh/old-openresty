#!/usr/bin/env perl

use FindBin;


if( $#ARGV != 0 )
{
	print "usage: $0 <dist_host>\n";
	exit;
}


print "$ARGV[0]\n";

chdir("$FindBin::Bin/../");
print "svn up ing\n";

chdir("../");
system("svn up");

print "packing  ...\n";
system("tar -cz --exclude=trunk/util --exclude=trunk/pkg --exclude=.svn -f  $FindBin::Bin/../pkg/openapi.tgz trunk");

system("scp $FindBin::Bin/../pkg/openapi.tgz $ARGV[0]:/tmp");

