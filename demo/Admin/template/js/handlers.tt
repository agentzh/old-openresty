[% DEFAULT
    category = 'Model'
-%]
function get[% category %]s (opts) {
    setStatus(true, 'get[% category %]');
    if (opts.cache) {
        if ([% category | lower %]List != null) {
            render[% category %]s([% category | lower %]List);
            return;
        }
    } else {
        [% category | lower %]List = null;
    }
    openresty.callback = render[% category %]s;
    openresty.get('/=/[% category | lower %]');
    get[% category %]Menu();
}

function render[% category %]s (res) {
    setStatus(false, 'get[% category %]s');
    if (!openresty.isSuccess(res)) {
        error("Failed to get [% category | lower %] list: " + res.error);
        return;
    }
    $("#main").html(
        Jemplate.process(
            'object-list.tt',
            { objects: res, category: '[% category | lower %]' }
        )
    ).postprocess();
}

function get[% category %]Menu () {
    setStatus(true, 'get[% category %]Menu');
    if ([% category | lower %]List != null) {
        return render[% category %]Menu([% category | lower %]List);
    }
    openresty.callback = render[% category %]Menu;
    openresty.get('/=/[% category | lower %]');
}

function render[% category %]Menu (res) {
    setStatus(false, 'get[% category %]Menu');
    if (!openresty.isSuccess(res)) {
        error("Failed to get the [% category | lower %] menu: " + res.error);
        return;
    }
    $("#menu").html(
        Jemplate.process(
            'menu.tt',
            { active_item: '[% category %]s', submenu: res }
        )
    ).postprocess();
}

$.fn.postprocess = function (className, options) {
    return this.find("a[@href^='#']").each( function () {
        var anchor = $(this).attr('href').replace(/^\#/, '');
        //debug("Anchor: " + anchor);
        $(this).click( function () {
            //debug(location.hash);
            location.hash = anchor;
            //alert(location.hash);
            if (savedAnchor == anchor) savedAnchor = null;
            dispatchByAnchor();
        } );
    } );
};

function setStatus (isLoading, category) {
    if (isLoading) {
        if (++loadingCount == 1) {
            if (jQuery.browser.opera)
                $(waitMessage).css('top', '2px');
            else
                $(waitMessage).show();
        }
    } else {
        loadingCount--;
        if (loadingCount < 0) loadingCount = 0;
        if (loadingCount == 0) {
            // the reason we use this hack is to work around
            // a rendering bug in Win32 build of Opera
            // (at least 9.25 and 9.26)
            if (jQuery.browser.opera)
                $(waitMessage).css('top', '-200px');
            else
                $(waitMessage).hide();

        }
    }
    //count++;
    //debug("[" + count + "] setStatus: " + category + ": " + loadingCount + "(" + isLoading + ")");
}

