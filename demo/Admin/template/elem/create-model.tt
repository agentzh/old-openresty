[% DEFAULT
    fields = [ 'Name', 'Description' ];
%]
<div class="ttl2">
    <span class="text">
        New model
    </span>
</div>

<form id="create-model-form">
    <table class="create-model">
        [%- FOREACH field = fields %]
        <tr>
            <td>
                [% field %]
            </td>
            <td>
                <input json_path="[% field | lower %]" type="text"></input>
            </td>
        </tr>
        [%- END %]
        <div id="create-model-columns"></div>
        <tr class="add-column">
            <td><a href="javascript:void(0);" onclick="addOneMoreColumn()">Add a column</a></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" class="create-button" value="Create" onclick="alert('Sorry, not implemented yet :P');return false;"></input></td>
        </tr>
    </table>
</form>

