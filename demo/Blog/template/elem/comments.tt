[%- FOREACH comment IN comments -%]
    <a id="post-[% comment.post %]:comment-[% comment.id %]"></a>
    <div class="comment" id="comment-95523406">
        <div class="comment-content">
            [% comment.body
                .replace("&", '&amp;')
                .replace("<", '&lt;')
                .replace(">", '&gt;')
                .replace("\n", "<br/>")
                .replace(" ", '&nbsp;')
                .replace("\t", '&nbsp;&nbsp;&nbsp;&nbsp;')
            %]
        </div>
        <p class="comment-footer">
            Posted by:
            [% comment.sender %] |
            [% comment.created %]
        </p>
    </div>
[%- END %]

