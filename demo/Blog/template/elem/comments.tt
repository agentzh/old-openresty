[%- FOREACH comment IN comments -%]
    <a id="post-[% comment.post %]:comment-[% comment.id %]"></a>
    <div class="comment" id="comment-95523406">
        <div class="comment-content">
            [% comment.body | html %]
        </div>
        <p class="comment-footer">
            Posted by:
            [% IF comment.url %]
                [%- url = comment.url %]
                [% IF NOT url.match('^\\w+://');
                        url = 'http://' _ url;
                    END -%]
                <a href="[% url | html %]">[% comment.sender | html %]</a>
            [% ELSE %]
                [% comment.sender | html %] |
            [% END %]
            [% comment.created | html %]
        </p>
    </div>
[%- END %]

